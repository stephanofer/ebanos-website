---
import Button from "@/components/Button.astro";
import ArrowUp from "@/assets/arrow-up.svg";
import SectionContainer from "@/components/SectionContainer.astro";
---

<SectionContainer name="categorias">
  <div class="container">
    <div class="titles">
      <h2>Muebles con estilo para todos los espacios</h2>
      <p>
        Contamos con +30 años creando muebles a medida. ¡Cotiza ya!
      </p>
    </div>

    <div class="images">
      <div class="category-card">
        <img src="/assets/DORMITORIO.jpg" alt="Dormitorio" />
        <div class="category-overlay">
          <h3>Dormitorio</h3>
          <span class="category-link">Ver colección</span>
        </div>
      </div>
      <div class="category-card">
        <img src="/assets/DORMITORIO.jpg" alt="Sala" />
        <div class="category-overlay">
          <h3>Sala</h3>
          <span class="category-link">Conocer más</span>
        </div>
      </div>
      <div class="category-card">
        <img src="/assets/DORMITORIO.jpg" alt="Comedor" />
        <div class="category-overlay">
          <h3>Comedor</h3>
          <span class="category-link">Ver modelos</span>
        </div>
      </div>
    </div>

    <div class="button-container">
      <Button type="secondary">
        ¡Visualizar más!
        <ArrowUp slot="icon-right" />
      </Button>
    </div>
  </div>
</SectionContainer>

<style>
  .container {
    display: flex;
    flex-direction: column;
    align-items: center;
    margin-top: 3rem;
  }

  .titles {
    align-self: start;
  }

  h2 {
    font-family: "Clash";
    font-weight: 550;
    font-size: var(--fs-xl);
    line-height: 1.2;
    color: var(--foreground);
    margin-bottom: 0.5rem;
    letter-spacing: -0.02em;
  }

  p {
    font-family: "Inter", sans-serif;
    font-size: var(--fs-base);
    line-height: 1.6;
    color: var(--secondary);
    max-width: 600px;
    font-weight: 400;
  }

  .button-container {
    width: 250px;
  }

  p br {
    margin-bottom: 0.5rem;
  }

  .images {
    width: 100%;
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
    gap: 1.5rem;
  }

  .category-card {
    position: relative;
    overflow: hidden;
    cursor: pointer;
    transition: transform 0.3s ease;
  }

  .category-card:hover {
    transform: translateY(-4px);
  }

  .category-card img {
    width: 100%;
    height: 600px;
    object-fit: cover;
    object-position: center;
    transition: transform 0.3s ease;
  }

  .category-card:hover img {
    transform: scale(1.05);
  }

  .category-overlay {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    text-align: center;
    color: white;
    z-index: 2;
  }

  .category-overlay h3 {
    font-family: "Clash", sans-serif;
    font-size: var(--fs-xl);
    font-weight: 600;
    margin: 0 0 0.5rem 0;
    text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.7);
    letter-spacing: -0.02em;
  }

  .category-overlay .category-link {
    font-family: "Inter", sans-serif;
    font-size: var(--fs-base);
    font-weight: 400;
    opacity: 0.9;
    text-decoration: underline;
    text-underline-offset: 4px;
    text-decoration-thickness: 1px;
    transition: opacity 0.3s ease;
    text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.7);
  }

  .category-card:hover .category-overlay .category-link {
    opacity: 1;
  }

  /* Responsive Design */
  @media (max-width: 768px) {
    .container {
      margin-top: 3rem;
    }

    h2 {
      font-size: var(--fs-lg);
      line-height: 1.3;
      margin-bottom: 0.5rem;
    }

    p {
      font-size: var(--fs-base);
      line-height: 1.7;
    }

    .images {
      display: flex;
      overflow-x: auto;
      gap: 1rem;
      margin: 1rem 0;
      scroll-snap-type: x mandatory;
      -webkit-overflow-scrolling: touch;
      scrollbar-width: none;
    }

    .images::-webkit-scrollbar {
      display: none;
    }

    .category-card {
      flex: 0 0 260px;
      scroll-snap-align: start;
    }

    .category-card img {
      height: 450px;
    }

    .category-overlay h3 {
      font-size: var(--fs-lg);
      
    }

    .category-overlay .category-link {
      font-size: var(--fs-sm);
      
    }
  }

  @media (max-width: 480px) {
    h2 {
      font-size: var(--fs-md);
    }

    .category-card {
      flex: 0 0 260px;
    }

    .category-card img {
      height: 400px;
    }

    .category-overlay h3 {
      font-size: var(--fs-lg);
    }

    .category-overlay .category-link {
      font-size: var(--fs-sm);
    }
  }
</style>