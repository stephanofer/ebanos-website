---
import Button from "@/components/Button.astro";
import Arrow from "@/assets/arrow-up.svg";
import Cart from "@/assets/cart.svg";
import Heart from "@/assets/heart.svg";
import Calendar from "@/assets/calendar.svg";
import Shield from "@/assets/shield.svg";
import Package from "@/assets/package.svg";
import { Image, Picture } from "astro:assets";
// import Image1 from "@/assets/image1.webp";
// import Image2 from "@/assets/image2.webp";
// import Image3 from "@/assets/image4.webp";
---

<div class="container">
  <div class="container-title">
    <div class="badge-trust">
      <Heart width={16} height={16} />
      <span>Más de 3,000 familias confían en nosotros</span>
    </div>
    <div class="texts">
      <h1>Fabricantes de Mobiliario de <br class="desktop-break" /> Alta Calidad en Chiclayo</h1>
      <p>Muebles excepcionales con acabados perfectos y entregas puntuales.</p>
    </div>
    <div class="buttons">
      <Button href="mailto:contacto@stephanofer.com" type="secondary">
        <Cart slot="icon-left" />
        ¡Últimos Proyectos!
      </Button>
      <Button href="mailto:contacto@stephanofer.com">
        <Arrow slot="icon-right" />
        ¡Diseño Personalizado!
      </Button>
    </div>

    <div class="resalt-points">
      <div class="point">
        <div class="resalt-point-1">
          +25
          <Calendar class="icon-point" />
        </div>
        <div class="resalt-point-1-2">Años de experiencia</div>
      </div>
      <div class="point">
        <div class="resalt-point-1">
          100%
          <Shield class="icon-point" />
        </div>
        <div class="resalt-point-1-2">Calidad Garantizada</div>
      </div>
      <div class="point">
        <div class="resalt-point-1">
          +3,000
          <Package class="icon-point" />
        </div>
        <div class="resalt-point-1-2">Entregas Realizadas</div>
      </div>
    </div>
  </div>
  <div class="container-images">
    <div class="image-card top-left">
      <span class="badge badge-1">NUEVO</span>
      <img
        src="/assets/image1.webp"
        alt="Closet de tres puertas corredizas, fabricado en melamina de 18 mm, en un sofisticado color TAUPE, Tocador integrado con iluminación LED, que agrega un toque práctico y elegante a tu espacio., Diseño moderno y funcional, ideal para maximizar cada rincón de tu dormitorio."
        loading="eager"
        fetchpriority="high"
        decoding="async"
        class="image-top"
      />
    </div>
  </div>
</div>

<style>
  .resalt-points {
    margin-top: 3rem;
    display: flex;
    gap: 0.3rem;
    font-size: var(--fs-base);

    @media (width > 1024px) {
      gap: 2rem;
    }

    & > div:first-of-type {
      border-right: 1px solid var(--secondary);
      padding-right: 0.5rem;
      @media (width > 1024px) {
        padding-right: 2.5rem;
      }
    }

    & > div:nth-child(2) {
      border-right: 1px solid var(--secondary);
      padding-right: 0.5rem;

      @media (width > 1024px) {
        padding-right: 2.5rem;
      }
    }
  }

  .resalt-point-1 {
    display: flex;
    align-items: center;
    font-size: 1.2rem;
    gap: 10px;
    font-weight: 600;

    @media (width > 1024px) {
      font-size: var(--fs-lg);
    }
  }

  .point {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
    flex: 1;
  }

  .icon-point {
    width: 30px;
    height: 30px;

    @media (width > 1024px) {
      width: 50px;
      height: 50px;
    }
  }

  .resalt-point-1-2 {
    font-weight: 450;
    font-size: 0.8rem;
    font-family: "Clash";

    @media (width > 1024px) {
      font-size: var(--fs-base);
    }
  }

  .container {
    display: flex;
    flex-direction: column;
    /* gap: 4rem; */

    @media (width > 1024px) {
      flex-direction: row;
      justify-content: space-between;
      align-items: center;
      height: calc(100dvh - 163.09px);
    }
  }

  .container-title {
    display: flex;
    flex-direction: column;
    /* width: 50%; */
    height: 100%;
    justify-content: center;
  }

  .badge-trust {
    background-color: rgb(69 69 69/ 0.2);
    padding: 0.3rem 1rem;
    border-radius: 1rem;
    border: 1px solid var(--secondary);
    color: var(--secondary);
    display: flex;
    align-items: center;
    gap: 0.3rem;
    width: fit-content;
    font-size: var(--fs-base);
    font-family: "Inter";
    margin-bottom: 1.5rem;

    & span {
      font-weight: 500;
      font-size: 0.8rem;
      font-family: "Clash";

      @media (width > 1024px) {
        font-size: var(--fs-sm);
      }
    }
  }

  h1 {
    font-family: "Clash";
    font-weight: 500;
    font-size: var(--fs-lg);
    max-width: 20ch;
    text-align: center;
    margin-bottom: 1rem;

    @media (width > 1024px) {
      font-size: var(--fs-xxl);
      text-align: left;
    }
  }

  .desktop-break {
    display: none;

    @media (width > 1024px) {
      display: inline;
    }
  }

  .texts {
    display: flex;
    flex-direction: column;
    align-items: center;
    @media (width > 1024px) {
      align-items: start;
    }
  }

  p {
    font-size: var(--fs-sm);
    text-align: center;
    font-family: "Inter";
    font-weight: 350;
    margin-bottom: 0;

    @media (width > 1024px) {
      font-size: var(--fs-md);
      text-align: left;
    }
  }
  .buttons {
    margin-top: 2rem;
    display: flex;
    gap: 0.5rem;
    flex-direction: column;
    justify-content: center;

    @media (width > 1024px) {
      gap: 1rem;
      flex-direction: row;
      justify-content: start;
    }
  }

  .container-images {
    width: 100%;
    height: 300px;
    margin-top: 2rem;

    @media (width > 1024px) {
      width: 40%;
      height: 80%;
      margin-top: 0;
    }
  }

  .image-card {
    width: 100%;
    height: 100%;
    position: relative;
    border-radius: 0.75rem;
    overflow: hidden;
  }

  .badge {
    position: absolute;
    top: 1rem;
    left: 1rem;
    padding: 0.25rem 0.75rem;
    border-radius: 1rem;
    font-family: "Clash";
    font-size: var(--fs-sm);
    font-weight: 550;
  }

  .badge-1 {
    background-color: rgb(227 240 250);
  }

  img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
    border-radius: 0.75rem;
  }
</style>
