---
import Button from "@/components/Button.astro";
import Arrow from "@/assets/arrow-up.svg";
import Cart from "@/assets/cart.svg";
import SectionContainer from "@/components/SectionContainer.astro";
---

<SectionContainer name="hero">
  <div class="hero-bento">
    <!-- Card Principal - Imagen grande -->
    <article class="bento-card bento-main">
      <img
        src="/assets/image1.webp"
        alt="Sala de estar elegante con muebles de madera de alta calidad fabricados por Ebanos"
        loading="eager"
        fetchpriority="high"
        decoding="async"
        class="bento-bg-image"
      />
      <div class="bento-overlay"></div>
      <div class="bento-content">
        <h1>Fabricantes de Mobiliario de Alta Calidad</h1>
        <p>
          Mobiliario excepcionales a medida en Chiclayo. Con acabados perfectos
          y entregas puntuales.
        </p>
      </div>
    </article>

    <!-- Card CTA - Con imagen de fondo -->
    <a
      href="https://wa.me/51979264871"
      target="_blank"
      rel="noopener noreferrer"
      role="link"
      class="bento-card bento-cta"
    >
      <img
        src="/assets/image2.webp"
        alt="Cotiza tu proyecto de muebles"
        loading="eager"
        decoding="async"
        class="cta-bg-image"
      />
      <div class="cta-overlay"></div>
      <div class="cta-content">
        <div class="cta-center">
          <h2>Cotiza tu proyecto</h2>
          <div class="cta-arrow">
            <Arrow width={24} height={24} />
          </div>
        </div>
        <div class="cta-footer">
          <span class="cta-location">Chiclayo, Per√∫</span>
        </div>
      </div>
    </a>
  </div>
</SectionContainer>
<style>
  /* ===== ANIMATIONS ===== */
  @keyframes fadeIn {
    from {
      opacity: 0;
    }
    to {
      opacity: 1;
    }
  }

  @keyframes slideUp {
    from {
      opacity: 0;
      transform: translateY(12px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @media (prefers-reduced-motion: reduce) {
    .bento-card,
    .bento-content > * {
      animation: none !important;
    }
    .bento-card:hover .bento-bg-image,
    .bento-card:hover .cta-bg-image {
      transform: none;
    }
  }

  /* ===== BENTO GRID LAYOUT ===== */
  .hero-bento {
    display: grid;
    gap: 0.75rem;
    grid-template-columns: 1fr;
    min-height: 100vh;

    @media (width > 768px) {
      grid-template-columns: 1.8fr 1fr;
      gap: 1rem;
      min-height: calc(100vh - 143.09px);
    }

    @media (width > 1024px) {
      grid-template-columns: 2fr 1fr;
      gap: 1rem;
      min-height: calc(100vh - 143.09px);
      padding-bottom: 1rem;
    }
  }

  /* ===== BASE CARD STYLES ===== */
  .bento-card {
    position: relative;
    border-radius: 0.5rem;
    overflow: hidden;
    animation: fadeIn 0.6s ease-out backwards;
  }

  /* ===== MAIN CARD ===== */
  .bento-main {
    min-height: 400px;
    animation-delay: 0ms;

    @media (width > 480px) {
      min-height: 450px;
    }

    @media (width > 768px) {
      min-height: unset;
    }
  }

  .bento-bg-image {
    position: absolute;
    inset: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.8s cubic-bezier(0.25, 0.46, 0.45, 0.94);
  }

  .bento-main:hover .bento-bg-image {
    transform: scale(1.02);
  }

  .bento-overlay {
    position: absolute;
    inset: 0;
    background: linear-gradient(
      to top,
      rgb(0 0 0 / 0.65) 0%,
      rgb(0 0 0 / 0.25) 45%,
      rgb(0 0 0 / 0.05) 100%
    );
  }

  .bento-content {
    position: relative;
    z-index: 2;
    height: 100%;
    display: flex;
    flex-direction: column;
    justify-content: flex-end;
    padding: 1.25rem;
    color: white;
    gap: 0.6rem;

    @media (width > 480px) {
      padding: 1.5rem;
      gap: 0.75rem;
    }

    @media (width > 768px) {
      padding: 2rem;
      gap: 0.85rem;
    }

    @media (width > 1024px) {
      padding: 2.5rem;
      gap: 1rem;
    }
  }

  .bento-main h1 {
    font-family: "Clash";
    font-weight: 500;
    font-size: var(--fs-lg);
    line-height: 1.15;
    letter-spacing: -0.02em;
    margin: 0;
    max-width: 18ch;
    text-shadow: 0 2px 16px rgb(0 0 0 / 0.4);
    animation: slideUp 0.5s ease-out 0.15s backwards;
    text-wrap: balance;

    @media (width > 768px) {
      font-size: var(--fs-xxl);
    }
  }

  .bento-main p {
    font-family: "Inter";
    font-size: clamp(0.875rem, 0.8rem + 0.25vw, 1.0625rem);
    font-weight: 400;
    opacity: 0.9;
    margin: 0;
    max-width: 48ch;
    line-height: 1.6;
    animation: slideUp 0.5s ease-out 0.2s backwards;
    text-wrap: pretty;
  }

  .hero-cta {
    margin-top: 0.5rem;
    animation: slideUp 0.5s ease-out 0.25s backwards;
    width: fit-content;

    @media (width > 768px) {
      margin-top: 0.75rem;
    }
  }

  .hero-cta :global(.sociallink) {
    border-radius: 0.5rem;
    /* border: 0px  */
  }

  /* ===== CTA CARD ===== */
  .bento-cta {
    text-decoration: none;
    cursor: pointer;
    display: flex;
    flex-direction: column;
    min-height: 280px;
    transition:
      transform 0.5s cubic-bezier(0.25, 0.46, 0.45, 0.94),
      box-shadow 0.5s ease;
    animation-delay: 100ms;

    @media (width > 480px) {
      min-height: 320px;
    }

    @media (width > 768px) {
      min-height: unset;
    }
  }

  .cta-bg-image {
    position: absolute;
    inset: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.8s cubic-bezier(0.25, 0.46, 0.45, 0.94);
  }

  .cta-overlay {
    position: absolute;
    inset: 0;

    background: linear-gradient(
      135deg,
      rgb(166 109 59 / 0.85) 0%,
      rgb(120 53 15 / 0.85) 100%
    );

    backdrop-filter: blur(6px);

    transition: opacity 0.4s ease;
  }

  .bento-cta:hover {
    transform: translateY(-3px);
    box-shadow: 0 16px 48px rgb(0 0 0 / 0.12);
  }

  .bento-cta:hover .cta-bg-image {
    transform: scale(1.05);
  }

  .bento-cta:hover .cta-overlay {
    opacity: 0.65;
  }

  .cta-content {
    position: relative;
    z-index: 2;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    height: 100%;
    padding: 1.25rem;
    color: white;
    text-align: center;

    @media (width > 768px) {
      padding: 2rem;
    }
  }

  .cta-center {
    display: flex;
    flex-direction: row;
    align-items: center;
    gap: 1rem;
    flex: 1;
    justify-content: center;
    font-family: "Clash";

    @media (width > 768px) {
      gap: 1.5rem;
    }
  }

  .cta-center h2 {
    font-family: "Clash";
    font-weight: 500;
    font-size: var(--fs-lg);
    line-height: 1.2;
    letter-spacing: -0.01em;
    margin: 0;
    white-space: nowrap;

    @media (width > 768px) {
      font-size: var(--fs-xl);
    }
  }

  .cta-arrow {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 35px;
    height: 35px;
    background: white;
    border-radius: 50%;
    flex-shrink: 0;
    transition: transform 0.3s ease;

    @media (width > 768px) {
      width: 40px;
      height: 40px;
    }
  }

  .cta-arrow :global(svg) {
    color: black;
    fill: black;
    stroke: black;
    transform: rotate(45deg);
  }

  .bento-cta:hover .cta-arrow {
    transform: scale(1.1);
  }

  .cta-footer {
    width: 100%;
    padding-top: 1rem;
    border-top: 1px solid rgb(0 0 0 / 0.1);
    margin-top: auto;

    @media (width > 768px) {
      padding-top: 1.25rem;
    }
  }

  .cta-location {
    font-family: "Clash";
    font-size: clamp(0.75rem, 0.7rem + 0.2vw, 0.875rem);
    font-weight: 500;
    opacity: 0.8;
  }
</style>
