---

interface Props {
  type?: "home" | "page" | "project" | "contact" | "about";
  pageTitle?: string;
  pageDescription?: string;
  breadcrumbs?: Array<{ name: string; url: string }>;
  projectData?: {
    name: string;
    description: string;
    image: string;
    datePublished: string;
    category: string;
    location?: string;
  };
}

const { 
  type = "page", 
  pageTitle = "Ebanos Muebles", 
  pageDescription = "",
  breadcrumbs = [],
  projectData 
} = Astro.props;

