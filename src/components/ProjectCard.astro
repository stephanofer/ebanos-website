---
interface Props {
  titulo: string;
  slug: string;
  categoria: string;
  imagenPortada: string;
  imagenPortadaAlt: string;
  descripcionCorta?: string;
  showCategory?: boolean;
}

const {
  titulo,
  slug,
  categoria,
  imagenPortada,
  imagenPortadaAlt,
  descripcionCorta,
  showCategory = true,
} = Astro.props;
---

<a href={`/proyectos/${slug}`} class="project-card">
  <div class="project-image">
    <img
      src={imagenPortada}
      alt={imagenPortadaAlt}
      loading="lazy"
      decoding="async"
    />
    <div class="project-overlay">
      {showCategory && <span class="project-category">{categoria}</span>}
      <h3 class="project-title">{titulo}</h3>
      <span class="project-link">Ver proyecto</span>
    </div>
  </div>
</a>

<style>
  .project-card {
    position: relative;
    display: block;
    overflow: hidden;
    border-radius: 8px;
    cursor: pointer;
    text-decoration: none;
    background: #f5f5f5;
  }

  .project-image {
    position: relative;
    width: 100%;
    height: 100%;
    min-height: 350px;
    overflow: hidden;
  }

  .project-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center;
    transition: transform 0.5s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .project-card:hover .project-image img {
    transform: scale(1.08);
  }

  .project-overlay {
    position: absolute;
    inset: 0;
    display: flex;
    flex-direction: column;
    justify-content: flex-end;
    padding: 1.5rem;
    background: linear-gradient(
      to top,
      rgba(0, 0, 0, 0.7) 0%,
      rgba(0, 0, 0, 0.3) 50%,
      rgba(0, 0, 0, 0) 100%
    );
    color: white;
    transition: background 0.3s ease;
  }

  .project-card:hover .project-overlay {
    background: linear-gradient(
      to top,
      rgba(0, 0, 0, 0.8) 0%,
      rgba(0, 0, 0, 0.4) 60%,
      rgba(0, 0, 0, 0.1) 100%
    );
  }

  .project-category {
    font-family: "Inter", sans-serif;
    font-size: 0.75rem;
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    opacity: 0.9;
    margin-bottom: 0.5rem;
  }

  .project-title {
    font-family: "Clash", sans-serif;
    font-size: var(--fs-lg);
    font-weight: 500;
    margin: 0 0 0.5rem 0;
    line-height: 1.2;
    letter-spacing: -0.02em;
    text-shadow: 0 2px 4px rgba(0, 0, 0, 0.3);
  }

  .project-link {
    font-family: "Inter", sans-serif;
    font-size: var(--fs-sm);
    font-weight: 400;
    opacity: 0.85;
    text-decoration: underline;
    text-underline-offset: 3px;
    text-decoration-thickness: 1px;
    transition: opacity 0.3s ease;
  }

  .project-card:hover .project-link {
    opacity: 1;
  }

  @media (max-width: 768px) {
    .project-image {
      min-height: 300px;
    }

    .project-title {
      font-size: var(--fs-md);
    }

    .project-overlay {
      padding: 1.25rem;
    }
  }

  @media (max-width: 480px) {
    .project-image {
      min-height: 260px;
    }

    .project-title {
      font-size: var(--fs-base);
    }

    .project-category {
      font-size: 0.7rem;
    }

    .project-link {
      font-size: 0.8rem;
    }
  }
</style>
