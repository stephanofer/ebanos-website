<style>
  .footer {
    border-top: 1px solid #e5e5e5;
    padding: 3rem 0 0 0;
  }

  .footer-container {
    max-width: 1440px;
    margin: 0 auto;
    padding: 0 1rem;
    display: grid;
    grid-template-columns: 1fr 2fr;
    gap: 3rem;
    align-items: start;
  }

  .footer-brand {
    display: flex;
    flex-direction: column;
  }

  .footer-logo {
    width: 100%;
    height: 50px;
  }

  .footer-tagline {
    font-size: var(--fs-base);
    line-height: 1.4;
    text-align: center;
    margin-top: 0.7rem;
  }

  .footer-links {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
  }

  .footer-column h3 {
    font-size: var(--fs-base);
    font-weight: 500;
    font-family: "Clash", sans-serif;
    margin: 0 0 1rem 0;
    color: var(--foreground);
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  .footer-column ul {
    list-style: none;
    margin: 0;
    padding: 0;
  }

  .footer-column li {
    margin-bottom: 0.5rem;
  }

  .footer-column a {
    text-decoration: none;
    font-size: 0.875rem;
    line-height: 1.4;
    transition: color 0.2s ease;
  }
  .footer-contact {
    display: flex;
    flex-direction: column;
    gap: 2rem;
  }

  .contact-info {
    font-size: 0.875rem;
    line-height: 1.4;
  }

  .contact-info p {
    margin: 0 0 0.25rem 0;

    & strong {
      font-weight: 500;
    }
  }

  .contact-phone,
  .contact-email {
    font-weight: 500;
    margin: 0.75rem 0 0.25rem 0 !important;
  }

  .hours {
    margin-top: 1.5rem;
  }

  .hours p {
    font-weight: 500;
  }

  .schedule-note {
    font-size: 0.8rem;
    margin: 0.5rem 0 0.25rem 0 !important;
  }

  .calendar-link {
    color: var(--foreground);
    text-decoration: underline;
    font-size: 0.8rem;
  }

  .footer-bottom {
    border-top: 1px solid #e5e5e5;
    padding: 1.5rem 0;
    margin-top: 3rem;
  }

  .footer-bottom-container {
    max-width: 1440px;
    margin: 0 auto;
    padding: 0 2rem;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    flex-wrap: wrap;
    gap: 1rem;
  }

  .footer-copyright p {
    margin: 0;
    font-size: 0.8rem;
  }

  .footer-legal {
    display: flex;
    gap: 1.5rem;
  }

  .payment-methods {
    display: flex;
    align-items: center;
    gap: 1rem;
  }

  .payment-icons {
    display: flex;
    gap: 0.75rem;
    align-items: center;
  }

  .social-link {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    text-decoration: none;
    font-size: 0.875rem;
    line-height: 1.4;
    transition: color 0.2s ease;
  }

  @media (max-width: 1024px) {
    .footer-container {
      grid-template-columns: 1fr;
      gap: 3rem;
    }

    .footer-links {
      grid-template-columns: repeat(2, 1fr);
      gap: 2rem;
    }

    .footer-contact {
      flex-direction: row;
      justify-content: space-between;
      align-items: flex-start;
    }
  }

  @media (max-width: 768px) {
    .footer {
      padding: 2rem 0 0 0;
    }

    .footer-container {
      padding: 0 1rem;
      gap: 2rem;
    }

    .footer-links {
      grid-template-columns: 1fr;
      gap: 1.5rem;
    }

    .footer-contact {
      flex-direction: column;
      gap: 1.5rem;
    }

    .footer-bottom-container {
      flex-direction: column;
      padding: 0 1rem;
    }

    .footer-legal {
      order: 1;
    }

    .payment-methods {
      order: 2;
      flex-direction: column;
      align-items: flex-start;
      gap: 0.5rem;
    }

    .payment-icons {
      flex-wrap: wrap;
    }
  }

  @media (max-width: 480px) {
    .footer-links {
      gap: 1rem;
    }

    .footer-column h3 {
      font-size: var(--fs-base);
      margin-bottom: 0.75rem;
    }

    .footer-column a {
      font-size: 0.8rem;
    }

    .payment-icons {
      gap: 0.5rem;
    }

    .payment-icon {
      font-size: 0.7rem;
      padding: 0.2rem 0.4rem;
    }
  }

  .development {
    font-size: var(--fs-sm);
    color: var(--secondary);

    a {
      font-weight: 500;
    }
  }

  .contact-strong-title {
    font-family: "Clash", sans-serif;
    font-size: var(--fs-base);
  }
</style>
