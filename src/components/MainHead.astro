---
import { SEO } from "astro-seo";

interface Props {
  title?: string;
  description?: string;
}

const {
  description = "Especialistas creando muebles exclusivos de alta calidad, dise√±ados para ti.",
  title = "Ebanos Muebles",
} = Astro.props;
---

<meta charset="UTF-8" />
<meta name="viewport" content="width=device-width" />
<style is:inline>
  /* Preload fonts con font-display: swap para evitar FOUT */
  @font-face {
    font-family: "Inter";
    font-style: normal;
    font-weight: 100 900;
    font-display: swap;
    src: url("/fonts/Inter.woff2") format("woff2");
  }

  @font-face {
    font-family: "Clash";
    font-style: normal;
    font-weight: 200 700;
    font-display: swap;
    src: url("/fonts/Clash.woff2") format("woff2");
  }

  *,
  *::after,
  *::before {
    box-sizing: border-box;
    margin: 0;
  }

  :root {
    color-scheme: light;
    --fs-sm: clamp(0.8rem, -0.09vi + 0.82rem, 0.75rem);
    --fs-base: clamp(1rem, 0vi + 1rem, 1rem);
    --fs-md: clamp(1.2rem, 0.15vi + 1.21rem, 1.33rem);
    --fs-lg: clamp(1.56rem, 0.39vi + 1.47rem, 1.78rem);
    --fs-xl: clamp(1.95rem, 0.76vi + 1.76rem, 2.37rem);
    --fs-xxl: clamp(2.44rem, 1.3vi + 2.12rem, 3.16rem);
    --fs-xxxl: clamp(3.05rem, 2.1vi + 2.53rem, 6.21rem);
    --foreground: rgb(0, 0, 0);
    --secondary: rgb(69 69 69);
  }

  html,
  body {
    width: 100%;
    height: 100%;
    margin: 0;
    color: var(--foreground);
    font-family: "Inter", sans-serif;
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
    text-rendering: optimizeLegibility;
  }

  body {
    scroll-behavior: smooth;
  }
</style>

<link
  rel="preload"
  href="/fonts/Inter.woff2"
  as="font"
  type="font/woff2"
  crossorigin
/>
<link
  rel="preload"
  href="/fonts/Clash.woff2"
  as="font"
  type="font/woff2"
  crossorigin
/>

<link rel="icon" type="image/svg+xml" href="favicon.svg" />
<link rel="icon" type="image/png" sizes="192x192" href="icon-192.png" />

<SEO title={title} description={description} />

