---
import MainHead from "@/components/MainHead.astro";
import { SEO } from "astro-seo";
import { ClientRouter } from "astro:transitions";

interface Props {
  title?: string;
}

const { title = "Ebanos Muebles" } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <MainHead title={title} />
    <ClientRouter />
  </head>
  <body>
    <slot />
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
</style>
