---
import BaseLayout from "@/layouts/BaseLayout.astro";
import SectionContainer from "@/components/SectionContainer.astro";
import Hero from "@/sections/Hero.astro";
import Categories from "@/sections/Categories.astro";
import Services from "@/sections/Services.astro";
import Testimonials from "@/sections/Testimonials.astro";

const title = "Ebanos Muebles Perú - Muebles a Medida y Diseñados para ti";
const description =
  "Especialistas creando muebles de alta calidad, diseñados para ti en Chiclayo.";
---

<BaseLayout title={title} description={description}>
  <SectionContainer name="hero">
    <Hero />
  </SectionContainer>
  <SectionContainer name="categorias">
    <Categories />
  </SectionContainer>
  <SectionContainer name="servicios">
    <Services />
  </SectionContainer>
  <SectionContainer name="testimonios">
    <Testimonials />
  </SectionContainer>
</BaseLayout>
